<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog id="helloDialog"
      title="Hello {/recipient/name}">
       <content>
         <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin">
        </core:Icon>
      </content>
        <endButton>
                <Button text="{i18n>closeBtn}" press=".onCloseDialog"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>